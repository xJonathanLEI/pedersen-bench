{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES2020",
    "lib": ["esnext", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./",
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
